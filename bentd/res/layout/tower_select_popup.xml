<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="#BBBBBB"
>
 	<RelativeLayout 
     	android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
	    android:layout_margin="1dp"
     	android:background="#BBBBBB"
    >
    	<LinearLayout 
	    	android:id="@+id/tower1_layout"
     		android:layout_width="44dp"
     		android:layout_height="wrap_content"
    		android:orientation="vertical"
    	    android:gravity="center"
     		android:background="#666666"
    	>
    		<ImageView
    		    android:id="@+id/image_button_1"
    	    	android:layout_width="30dp"
    	    	android:layout_height="30dp"
    	    	android:contentDescription="A"
				android:layout_gravity="center"
        		android:adjustViewBounds="true"
        		android:scaleType="centerInside"
    	    	android:src="@drawable/tower_archer"
    	    	android:layout_marginTop="1dp"
    	    	android:gravity="center"
    	   	/>
    		<TextView
	    		android:id="@+id/tower1_text_price"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="wrap_content"
    	    	android:layout_margin="0dp"
    	    	android:textSize="10dp"
    	    	android:textColor="#FFFFFF"
    	    	android:text="$50"
    		/>
    	</LinearLayout>
    	<LinearLayout
	    	android:id="@+id/tower2_layout"    	    
    		android:layout_toRightOf="@+id/tower1_layout"
    		android:layout_marginLeft="1dp"
     		android:layout_width="44dp"
     		android:layout_height="wrap_content"
    		android:orientation="vertical"
    	    android:gravity="center"
     		android:background="#666666"
    	>
    		<ImageView
    		    android:id="@+id/image_button_2"
    	    	android:layout_width="30dp"
    	    	android:layout_height="30dp"
    	    	android:contentDescription="B"
        		android:adjustViewBounds="true"
        		android:scaleType="centerInside"
    	    	android:src="@drawable/tower_ninja"
    	    	android:layout_marginTop="1dp"
    	    />
    		<TextView
	    		android:id="@+id/tower2_text_price"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="wrap_content"
    	    	android:textSize="10dp"
    	    	android:textColor="#FFFFFF"
    	    	android:text="$75"
    	    	android:gravity="center"
    		/>
    	</LinearLayout>
    	<LinearLayout
	    	android:id="@+id/tower3_layout"
    	    android:layout_below="@+id/tower1_layout"
    	    android:layout_alignParentLeft="@+id/tower1_layout"
    	    android:layout_marginTop="1dp"
     		android:layout_width="44dp"
     		android:layout_height="wrap_content"
    		android:orientation="vertical"
    	    android:gravity="center"
     		android:background="#666666"
    	>
	   		<ImageView
    		    android:id="@+id/image_button_3"
    	    	android:layout_width="30dp"
    	    	android:layout_height="30dp"
    	    	android:contentDescription="C"
        		android:adjustViewBounds="true"
        		android:scaleType="centerInside"
    	    	android:src="@drawable/tower_shrine"
    	    	android:layout_marginTop="1dp"
    	    />
    		<TextView
	    		android:id="@+id/tower3_text_price"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="wrap_content"
    	    	android:textSize="10dp"
    	    	android:textColor="#FFFFFF"
    	    	android:text="$150"
    	    	android:gravity="center"
    		/>
    	</LinearLayout>
    	<LinearLayout
	    	android:id="@+id/tower4_layout"
    	    android:layout_below="@+id/tower2_layout"
    	    android:layout_toRightOf="@+id/tower3_layout"
    	    android:layout_marginTop="1dp"
    		android:layout_marginLeft="1dp"
     		android:layout_width="44dp"
     		android:layout_height="wrap_content"
    		android:orientation="vertical"
    	    android:gravity="center"
     		android:background="#666666"
    	>
    		<ImageView
    		    android:id="@+id/image_button_4"
    	    	android:layout_width="30dp"
    	    	android:layout_height="30dp"
    	    	android:contentDescription="D"
        		android:adjustViewBounds="true"
        		android:scaleType="centerInside"
    	    	android:src="@drawable/tower_ballista_idle"
    	    	android:layout_marginTop="1dp"
    	    />
    		<TextView
	    		android:id="@+id/tower4_text_price"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="wrap_content"
    	    	android:textSize="10dp"
    	    	android:textColor="#FFFFFF"
    	    	android:text="$200"
    	    	android:gravity="center"
    		/>
    	</LinearLayout>
    </RelativeLayout>
</LinearLayout>